<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
  <meta charset="utf-8">
  <title>Results</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <style>
    body {
      background-color: whitesmoke;
      color: black;
    }

    .container {
      margin-top: 50px;
    }

    .table {
      background-color: #fff;
      color: #36395A;
      margin-bottom: 30px;
      padding-bottom: 30px;
      height: 600px;
      display: block;
      overflow-y: auto;
    }

    th {
      background-color: #f8f8f8;
      color: #36395A;
    }

    .scrollit {
 
      height: 600px;
    }

    .btn-warning {
      background-color: #ff9800;
      color: #fff;
      border-color: #ff9800;
      margin-top: 30px;
    }

    .btn-warning:hover,
    .btn-warning:focus,
    .btn-warning:active {
      background-color: #e65100;
      border-color: #e65100;
    }

    .truncate {
      max-width: 302px;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .truncate:hover {
      overflow: visible;
      white-space: normal;

    }
    

    .tooltip-inner {
  background-color: #4c4c51;
  color: #f30606;
  max-width: 600px;
  font-size:xx-small;
  font-style: italic;
}

    .tooltip.top .tooltip-arrow {
      border-top-color: #f20f0f;
    }

    .tooltip.right .tooltip-arrow {
      border-right-color: #eb1010;
    }

    .tooltip.bottom .tooltip-arrow {
      border-bottom-color: #ed1919;
    }

    .tooltip.left .tooltip-arrow {
      border-left-color: #fd1515;
    }
  </style>
</head>

<body>
  <div class="container">
    <div class="scrollit">
      <% if(details!=null) { %>
      <table class="table table-hover table-bordered">
        <thead>
          <tr>
            <th>Sl_no</th>
            <th>Info</th>
            <th>NucleotideSeq</th>
            <th>Size</th>
            <th>per</th>
            <th>ProteinSeq</th>
            <th>Remark</th>
          </tr>
        </thead>
        <tbody>
          <% details.forEach(function(item) { %>
          <tr>
            <td><%= item.Sl_no%></td>
            <td class="truncate" data-toggle="tooltip" data-placement="top" title="<%= item.Info %>"><%= item.Info %></td>
            <td class="truncate" data-toggle="tooltip" data-placement="top" title="<%= item.NucleotideSeq %>"><%= item.NucleotideSeq %></td>
            <td><%= item.Size%></td>
            <td><%= item.per%></td>
            <td class="truncate" data-toggle="tooltip" data-placement="top" title="<%= item.ProteinSeq %>"><%= item.ProteinSeq %></td>
            <td><%= item.Remark%></td>
          </tr>
          <% }) %>
        </tbody>
      </table>
      <% } %>
    </div>
    <button class="btn btn-lg btn-warning" type="button" onclick="location.href='/';">Go Back</button>
  </div>

  <script>
    $(function() {
      $('[data-toggle="tooltip"]').tooltip();
    });
  </script>
</body>

</html>